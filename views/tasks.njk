{% extends layout %}
{% block  content %}
<main class="container">
<h1>New Task</h1>
<div>
    <form action="/tasks" method="post">
    <label for="task">Task</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="task" id="task" value="{{ task }}" placeholder="Write a task" required>
            <input type="text" class="form-control" name="taskInfo" id="taskInfo" value="{{ taskInfo }}" placeholder="Write task information" required>
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Add task</button>
        </div>
    </form>
</div>
<h1>Display on active tasks</h1>
<div class="d-flex">
    {% for task in tasks %}
    {% if task.completed==0 %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{task.task}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Created: {{task.created_at}}</h6> 
            <p>
                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{task.id}}" aria-expanded="false" aria-controls="collapse{{task.id}}">
                Information
                </button>
            </p>
            <div class="collapse" id="collapse{{task.id}}">
              <div class="card card-body">
                {{task.taskInfo}}
              </div>
            </div>
             
                <div class="d-flex">
                <a href="/tasks/{{task.id}}/complete"><button type="button" class="btn btn-success">Complete</button></a>
                <a href="/tasks/{{task.id}}/delete"><button type="button" class="btn btn-outline-danger">Delete</button></a>
                <div>
        </div>
    </div>
    {% endif %}
    {% endfor %}
    </div>
<h1>Display completed tasks</h1>
<ul class="list-group">
    {% for task in tasks %}
    {% if task.completed==1 %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
        <h5 class="card-title">{{task.task}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Created: {{task.created_at}}</h6>
        <h6 class="card-subtitle mb-2 text-muted">Completed at: {{task.created_at}}</h6>  
        <a href="/tasks/{{task.id}}/delete"><button type="button" class="btn btn-outline-danger">Delete</button></a>
     </div>
    </div>
    {% endif %}
    {% endfor %}
</ul>
</main>

{% endblock %}